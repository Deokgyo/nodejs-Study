<style>
    .write-container {
        display: flex;
        flex-direction: column;
    }
    .input-area {
        display: flex;
        flex-direction: column;
    }
</style>

<div class="write-container">
    <h1>[{{title}}] 글 작성</h1>
    <form method="post" action="/write" name="boardForm"> 
        <section class="input-area">
            <label>
                제목
                <input type="text" name="subject" placeholder="제목을 넣어주세요">
            </label>
            <label>이름
                <input type="text" name="name"placeholder="이름">
            </label>
            <label>비밀번호
                <input type="password" name="passwd" placeholder="비밀번호">
            </label>
            <label>본문 입력</label>
            <textarea placeholder="내용을 입력하세요" name="postContent" class="post-content"></textarea>
        </section>

        <section class="btn-area">
            <button class="save btn">저장</button>
            <button type="button" class="cancel btn" onclick="location.href='/'">취소</button>
        </section>
    </form>
</div>